{
  "mcpServers": {
    "fetch": {
      "args": [
        "mcp-server-fetch"
      ],
      "command": "uvx"
    },
    "github.com/awslabs/mcp/tree/main/src/aws-documentation-mcp-server": {
      "args": [
        "awslabs.aws-documentation-mcp-server@latest"
      ],
      "autoApprove": [
        "read_documentation",
        "search_documentation",
        "recommend"
      ],
      "command": "uvx",
      "disabled": false,
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "github.com/awslabs/mcp/tree/main/src/terraform-mcp-server": {
      "args": [
        "awslabs.terraform-mcp-server@latest"
      ],
      "autoApprove": [
        "SearchUserProvidedModule",
        "SearchSpecificAwsIaModules",
        "SearchAwsccProviderDocs",
        "SearchAwsProviderDocs"
      ],
      "command": "uvx",
      "disabled": false,
      "disabled_resources": [],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "github.com/modelcontextprotocol/servers/tree/main/src/filesystem": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/yss/PROJECTS/"
      ],
      "autoApprove": [
        "read_file",
        "read_multiple_files",
        "list_directory",
        "search_files",
        "get_file_info",
        "list_allowed_directories",
        "directory_tree",
        "move_file",
        "write_file",
        "create_directory",
        "edit_file"
      ],
      "command": "/Users/yss/.local/share/mise/shims/npx",
      "disabled": false,
      "env": []
    },
    "github.com/modelcontextprotocol/servers/tree/main/src/sequentialthinking": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "autoApprove": [
        "sequentialthinking"
      ],
      "command": "/Users/yss/.local/share/mise/shims/npx",
      "disabled": false
    },
    "serena": {
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant"
      ],
      "autoApprove": [
        "find_file",
        "find_symbol",
        "list_dir",
        "read_memory",
        "write_memory",
        "list_memories",
        "think_about_collected_information"
      ],
      "command": "uvx"
    }
  },
  "nativeMCPServers": {
    "mcphub": {
      "disabled_prompts": [
        "create_native_server"
      ],
      "disabled_resources": [
        "mcphub://docs",
        "mcphub://native_server_guide",
        "mcphub://changelog"
      ]
    },
    "neovim": {
      "disabled_prompts": [
        "parrot"
      ],
      "disabled_resources": [],
      "disabled_tools": [
        "delete_items"
      ]
    }
  }
}
