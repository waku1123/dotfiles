{
  "globalShortcut": "Alt+Ctrl+Tab",
  "mcpServers": {
    "fetch": {
      "args": [
        "mcp-server-fetch"
      ],
      "autoApprove": [
        "fetch"
      ],
      "command": "uvx"
    },
    "filesystem": {
      "command": "/Users/yss/.local/share/mise/shims/npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/yss"
      ],
      "autoApprove": [
        "read_file",
        "read_multiple_files",
        "list_directory",
        "search_files",
        "get_file_info",
        "list_allowed_directories",
        "directory_tree",
        "move_file",
        "write_file",
        "create_directory",
        "edit_file",
        "list_directory_with_sizes",
        "read_media_file",
        "read_text_file"
      ]
    },
    "aws-document": {
      "command": "uvx",
      "args": [
        "awslabs.aws-documentation-mcp-server@latest"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_DOCUMENTATION_PARTITION": "aws"
      },
      "disabled": false,
      "autoApprove": []
    },
    "serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant"
      ],
      "autoApprove": [
        "find_file",
        "find_symbol",
        "list_dir",
        "read_memory",
        "write_memory",
        "list_memories",
        "think_about_collected_information",
        "activate_project",
        "onboarding",
        "search_for_pattern"
      ]
    },
    "aws-terraform": {
      "command": "uvx",
      "args": [
        "awslabs.terraform-mcp-server@latest"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "SearchUserProvidedModule",
        "SearchSpecificAwsIaModules",
        "SearchAwsccProviderDocs",
        "SearchAwsProviderDocs"
      ]
    }
  }
}
